{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "pandoc-md-pdf",
            "type": "shell",
            "command": "pandoc",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.pdf",
                "--from",
                "markdown",
                "--listings",
                "--template",
                "${workspaceFolder}/.pandoc_data_dir/default_template.tex"
            ]
        },
        {
            "label": "pandoc-md-pdf-open",
            "type": "shell",
            "command": "open",
            "args": [
                "${fileDirname}/${fileBasenameNoExtension}.pdf"
            ],
            "dependsOn": [
                "pandoc-md-pdf"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}